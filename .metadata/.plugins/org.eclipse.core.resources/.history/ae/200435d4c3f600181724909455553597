package lifegame;
import javax.swing.JPanel;
import java.awt.Graphics;

public class BoardView extends JPanel {
	BoardModel view;
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public BoardView(BoardModel board) {
		view = board;
	}

	@Override
	public void paint(Graphics g) {
		super.paint(g);
		
		int xlen = this.getWidth();
		int ylen = this.getHeight();
		int centeringx = (xlen-ylen)/2;
		int centeringy = (ylen-xlen)/2;
		if(xlen >= ylen) {
			for(int i = 0; i<11; i++) {
				g.drawLine((ylen/10)*i+centeringx, 0, (ylen/10)*i+centeringx, (ylen/10)*10);
			}
			for(int i = 0; i<11; i++) {
				g.drawLine(centeringx, (ylen/10)*i, (ylen/10)*10+centeringx,(ylen/10)*i);
			}
		}else {
			for(int i = 0; i<11; i++) {
				g.drawLine((xlen/10)*i, centeringy, (xlen/10)*i, (xlen/10)*10+centeringy);
			}
			for(int i = 0; i<11; i++) {
				g.drawLine(0, (xlen/10)*i+centeringy, (xlen/10)*10,(xlen/10)*i+centeringy);
			}
		}
		for(int i = 0; i < 10; i++) {
			for(int j = 0; j<10; j++) {
				if(view.isAlive(i,j)==true) {
					if(xlen>=ylen) {
						g.fillRect((ylen/10)*i+centeringx, (ylen/10)*j, ylen/10+centeringx, ylen/10);
					}
					else {
						g.fillRect((xlen/10)*i, (xlen/10)*j+centeringy, xlen/10, xlen/10+centeringy);
					}
				}
			}
		}
	}
	
}
