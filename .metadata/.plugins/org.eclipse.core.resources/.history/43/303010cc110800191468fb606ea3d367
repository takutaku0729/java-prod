package lifegame;
import javax.swing.JButton;
import javax.swing.JPanel;
import java.awt.Graphics;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.event.MouseMotionListener;

public class BoardView extends JPanel implements BoardListener, MouseListener, MouseMotionListener {
	BoardModel model;
	int cols,rows;
	int changex;
	int changey;
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public BoardView(BoardModel board) {
		model = board;
		cols = model.getCols();
		rows = model.getRows();
		this.addMouseListener(this);
		this.addMouseMotionListener(this);

	}
	

	@Override
	public void paint(Graphics g) {
		super.paint(g);
		
		
		int xlen = this.getWidth()-1;
		int ylen = this.getHeight()-1;
		int cellsize;
		
		if((xlen/cols*rows)<ylen) {	//横いっぱい
			cellsize = xlen/cols;
			for(int i = 0; i<(cols+1); i++) {//縦線
				g.drawLine(cellsize*i, (ylen-cellsize*rows)/2,cellsize*i, cellsize*rows+(ylen-cellsize*rows)/2);
			}
			for(int i = 0; i<(rows+1); i++) { //横線
				g.drawLine(0, cellsize*i+(ylen-cellsize*rows)/2, cellsize*cols,cellsize*i+(ylen-cellsize*rows)/2);
			}
		}else {
			cellsize = ylen/rows; //縦いっぱい
			for(int i = 0; i<(cols+1); i++) {//縦線
				g.drawLine(cellsize*i+(xlen-cellsize*cols)/2, 0, cellsize*i+(xlen-cellsize*cols)/2, cellsize*rows);
			}
			for(int i = 0; i<(rows+1); i++) { //横線
				g.drawLine((xlen-cellsize*cols)/2, cellsize*i, cellsize*cols+(xlen-cellsize*cols)/2, cellsize*i);
			}
		}
		
		for(int i = 0; i < cols; i++) {
			for(int j = 0; j<rows; j++) {
				if(model.isAlive(i,j)==true) {
					if((xlen/cols*rows)<ylen) {
						g.fillRect(cellsize*i+1, (ylen-cellsize*rows)/2+cellsize*j+1, cellsize-1, cellsize-1);
					}
					else {
						g.fillRect(cellsize*i+(xlen-cellsize*cols)/2+1, cellsize*j+1, cellsize-1, cellsize-1);
					}
				}
			}
		}
	}


	@Override
	public void mouseDragged(MouseEvent e) {
		int x = e.getX();
		int y = e.getY();
		int prex = changex;
		int prey = changey;
		int xlen = this.getWidth()-2;
		int ylen = this.getHeight()-2;
		int cellsize;
		
		if((xlen/cols*rows)<ylen){ //yokoippai
			cellsize = xlen/cols;
			for(changex = 0; changex < cols; changex++) {
				if(1+cellsize*changex < x && x < 1 + cellsize*(changex+1)) {
					break;
				}
			}
			for(changey = 0; changey < rows; changey++) {
				if(1 + changey*cellsize + (ylen-cellsize*rows)/2 < y &&
						y < 1 + (changey+1)*cellsize + (ylen-cellsize*rows)/2) {
					break;
				}
			}
			if(prex != changex || prey != changey) {
				if(changey == rows || changex == cols) {
					return;
				}
				model.addhistory();
				model.changeCellState(changex, changey);
				this.repaint();
			}
		}else {
			cellsize = ylen/rows;
			for(changex = 0; changex < cols; changex++) {
				if(1 + cellsize*changex + (xlen-cellsize*cols)/2 < x &&
						x < 1 + cellsize*(changex+1) + (xlen-cellsize*cols)/2) {
					break;
				}
			}
			for(changey = 0; changey < rows; changey++) {
				if(1 + changey*cellsize < y &&
						y < 1 + (changey+1)*cellsize) {
					break;
				}
			}
			if(prex != changex || prey != changey) {
				if(changey == rows || changex == cols) {
					return;
				}
				model.addhistory();
				model.changeCellState(changex, changey);
				this.repaint();
			}
		}
		
	}

	@Override
	public void updated(BoardModel m) {
		
	}

	@Override
	public void mousePressed(MouseEvent e) {
		int pushx = e.getX();
		int pushy = e.getY();
		int xlen = this.getWidth()-2;
		int ylen = this.getHeight()-2;
		int cellsize;
		
		if((xlen/cols*rows)<ylen){ //yokoippai
			cellsize = xlen/cols;
			for(changex = 0; changex < cols; changex++) {
				if(1+cellsize*changex < pushx && pushx < 1 + cellsize*(changex+1)) {
					break;
				}
				if(changex == cols) {
					return;
				}
			}
			for(changey = 0; changey < rows; changey++) {
				if(1 + changey*cellsize + (ylen-cellsize*rows)/2 < pushy &&
						pushy < 1 + (changey+1)*cellsize + (ylen-cellsize*rows)/2) {
					break;
				}
				if(changey == rows) {
					return;
				}
			}
			model.addhistory();
			model.changeCellState(changex, changey);
			this.repaint();
		}else {
			cellsize = ylen/rows;
			for(changex = 0; changex < cols; changex++) {
				if(1 + cellsize*changex + (xlen-cellsize*cols)/2 < pushx &&
						pushx < 1 + cellsize*(changex+1) + (xlen-cellsize*cols)/2) {
					break;
				}
				if(changex == cols) {
					return;
				}
			}
			for(changey = 0; changey < rows; changey++) {
				if(1 + changey*cellsize < pushy &&
						pushy < 1 + (changey+1)*cellsize) {
					break;
				}
				if(changey == rows) {
					return;
				}
			}
			model.addhistory();
			model.changeCellState(changex, changey);
			this.repaint();
		}
		
	}


	@Override
	public void mouseMoved(MouseEvent e) {
		// TODO 自動生成されたメソッド・スタブ
		
	}


	@Override
	public void mouseClicked(MouseEvent e) {
		// TODO 自動生成されたメソッド・スタブ
		
	}


	@Override
	public void mouseReleased(MouseEvent e) {
		// TODO 自動生成されたメソッド・スタブ
		
	}


	@Override
	public void mouseEntered(MouseEvent e) {
		// TODO 自動生成されたメソッド・スタブ
		
	}


	@Override
	public void mouseExited(MouseEvent e) {
		// TODO 自動生成されたメソッド・スタブ
		
	}
	
}
